<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_border1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/customView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:background="@color/abc_search_url_text_normal"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/text_view_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Sign In" />

        </LinearLayout>


        <EditText
            android:id="@+id/editTextLoginUser"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_below="@+id/editTextLoginPassword"
            android:background="@drawable/edit_text_format"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint="@string/user_name_hint"
            android:inputType="textNoSuggestions" />

        <EditText
            android:id="@+id/editTextLoginPassword"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_above="@+id/buttonSignIn"
            android:background="@drawable/edit_text_format"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="@string/user_password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@drawable/green_btn"
            android:onClick="performLogin"
            android:text="@string/login_btn"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>